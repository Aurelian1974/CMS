{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\ERP;Database=ValyanClinic;Trusted_Connection=True;Encrypt=False;MultipleActiveResultSets=True"
  },

  "Jwt": {
    "Secret": "CHANGE_ME_IN_PRODUCTION_MIN_64_CHARS_LONG_SECRET_KEY_HERE_12345678",
    "Issuer": "ValyanClinic.API",
    "Audience": "ValyanClinic.Client",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  },

  "Syncfusion": {
    "LicenseKey": ""
  },

  "Storage": {
    "BasePath": "C:\\ValyanClinicStorage",
    "MaxFileSizeBytes": 10485760,
    "AllowedExtensions": [ ".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx", ".xls", ".xlsx" ]
  },

  "Pagination": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100
  },

  "Cors": {
    "AllowedOrigins": [ "https://localhost:5173", "http://localhost:5173" ]
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Cnas": {
    "SiuiSchemaVersion": "3.0",
    "ExportPath": "C:\\ValyanClinicStorage\\CNAS\\Export"
  },

  "Security": {
    "BcryptWorkFactor": 12
  },

  "RateLimiting": {
    "LoginMaxAttempts": 5,
    "LoginWindowMinutes": 15,
    "GeneralMaxRequests": 100,
    "GeneralWindowSeconds": 60
  },

  "AllowedHosts": "*"
}
